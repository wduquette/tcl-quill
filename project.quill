project tcl-quill 0.2.0a1 "Quill Project Build System for Tcl/Tk"
homepage http://github.com/wduquette/tcl-quill
app quill -apptypes {linux osx windows}
provide quill

require Tcl 8.6
require snit 2.3
require textutil::expander 1.3.1
require zipfile::encode 0.3

dist linux {
	bin/quill-linux
	%docs
	LICENSE
	README.md
}

dist osx {
	bin/quill-osx
	%docs
	%libs
	LICENSE
	README.md
}

dist windows {
	bin/quill-windows.exe
	docs/*.html
	docs/*/*.html
	docs/*.md
	%libs
	LICENSE
	README.md
}